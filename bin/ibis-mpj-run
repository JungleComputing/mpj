#!/bin/sh

#ibis-mpj-run script.
#This script is a convenience script to run Ibis MPJ applications.

# Check setting of MPJ_HOME
if [ -z "$MPJ_HOME" ];  then
    echo "please set MPJ_HOME to the location of your Ibis MPJ installation" 1>&2
    exit 1
fi

# Check setting of IBIS_HOME
if [ -z "$IBIS_HOME" ];  then
    echo "please set IBIS_HOME to the location of your Ibis installation" 1>&2
    exit 1
fi

export CLASSPATH="$MPJ_HOME/lib/mpj.jar:$CLASSPATH"
$IBIS_HOME/bin/ibis-run "$@"
